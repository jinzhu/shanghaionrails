<!DOCTYPE html>
<html>
  <head>
    <title>从 SuperList 谈谈我的工具箱</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="Content-Style-Type" content="text/css"/>
    <meta http-equiv="Content-Script-Type" content="text/javascript"/>

    <style type="text/css" media="screen">
      <%= read('stylesheets/slides.css') %>
    </style>
    <% stylesheets.each do |style| %>
      <style type="text/css" media="screen">
        <%= File.read(style) %>
      </style>
    <% end %>
    <script type="text/javascript">
      <%= read('javascripts/jquery-1.3.2.js') %>
    </script>
    <script type="text/javascript" charset="utf-8">
      <%= read('javascripts/jquery.easing.js') %>
    </script>
    <script type="text/javascript" charset="utf-8">
      <%= read('javascripts/jquery.hash-changed.js') %>
    </script>
    <script type="text/javascript" charset="utf-8">
      <%= read('javascripts/slides.js') %>
    </script>
    <% javascripts.each do |javascript| %>
      <script type="text/javascript" charset="utf-8">
        <%= javascript %>
      </script>
    <% end %>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-23459165-1']);
      _gaq.push(['_trackPageview']);

      (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
       })();

     </script>
  </head>
  <body>
    <div id="instructions">
      Use the left/right arrow keys to navigate.
    </div>
    <div id="slides">
      <div id="track">
        <% slides.each_with_index do |slide, idx| %>
          <div class="<%= slide.classes.join(' ') %>">
            <div id="slide-<%= idx %>" class="content">
              <%= slide.html %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
